<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_dark">

    <!-- Search bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/search_bg"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="12dp"
        android:paddingStart="14dp"
        android:paddingEnd="8dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_search"
            android:importantForAccessibility="no" />

        <EditText
            android:id="@+id/searchInput"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="@string/search_history"
            android:textColorHint="@color/on_surface_secondary"
            android:textColor="@color/on_surface"
            android:background="@null"
            android:singleLine="true"
            android:inputType="text"
            android:layout_marginStart="10dp"
            android:textSize="14sp" />

        <ImageButton
            android:id="@+id/clearSearch"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_close"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:visibility="gone"
            android:contentDescription="Clear search" />
    </LinearLayout>

    <!-- Clear all button row -->
    <LinearLayout
        android:id="@+id/clearAllRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end|center_vertical"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="4dp">

        <Button
            android:id="@+id/clearAllButton"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="@string/clear_all_history"
            android:textColor="@color/error"
            android:textSize="12sp"
            android:background="?attr/selectableItemBackground"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp" />
    </LinearLayout>

    <!-- History list -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/historyRecycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="4dp"
        android:clipToPadding="false" />

    <!-- Empty state -->
    <TextView
        android:id="@+id/emptyState"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/no_history"
        android:textColor="@color/on_surface_secondary"
        android:textSize="16sp"
        android:gravity="center"
        android:visibility="gone" />

</LinearLayout>

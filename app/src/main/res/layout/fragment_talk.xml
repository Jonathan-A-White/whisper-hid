<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_dark">

    <!-- Status bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp">

        <View
            android:id="@+id/statusDot"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/status_dot" />

        <TextView
            android:id="@+id/statusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/status_stopped"
            android:textColor="@color/on_surface_secondary"
            android:textSize="14sp"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Pinned items header -->
    <TextView
        android:id="@+id/pinnedHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pinned_header"
        android:textColor="@color/on_surface_secondary"
        android:textSize="12sp"
        android:textAllCaps="true"
        android:letterSpacing="0.1"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:visibility="gone" />

    <!-- Pinned items horizontal list -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/pinnedRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="6dp"
        android:paddingBottom="8dp"
        android:clipToPadding="false"
        android:visibility="gone" />

    <!-- Spacer to center talk button -->
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Big Talk Button -->
    <Button
        android:id="@+id/pttButton"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/talk_button_idle"
        android:text="@string/hold_to_talk"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold"
        android:stateListAnimator="@null" />

    <!-- Spacer -->
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Last transcription preview -->
    <TextView
        android:id="@+id/lastTranscription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/on_surface_secondary"
        android:textSize="14sp"
        android:padding="16dp"
        android:gravity="center"
        android:maxLines="2"
        android:ellipsize="end"
        android:visibility="gone" />

</LinearLayout>
